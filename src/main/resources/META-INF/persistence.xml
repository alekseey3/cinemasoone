<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="CinemaSoonPU" transaction-type="JTA">
        <jta-data-source>jdbc/CinemaSoonDS</jta-data-source>

        <class>com.cinemasoon.entity.User</class>
        <class>com.cinemasoon.entity.Movie</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="jakarta.persistence.jdbc.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
